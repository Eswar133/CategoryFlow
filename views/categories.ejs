<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Categories</title>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/particles.js/2.0.0/particles.min.js"></script>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: 'Inter', sans-serif;
      color: #f0f0f0;
      min-height: 100vh;
      position: relative;
      background: #0f2027; /* Dark gradient background */
    }

    #particles-js {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      z-index: 1;
    }

    .content {
      position: relative;
      z-index: 2;
      padding: 2rem;
    }

    h1 {
      color: #00d4ff; /* Vibrant cyan */
      text-align: center;
      margin-bottom: 2rem;
      font-size: 2.5rem;
      text-shadow: 0 0 20px rgba(0, 212, 255, 0.5);
    }

    form {
      max-width: 600px;
      margin: 0 auto 2rem;
      padding: 2rem;
      background: rgba(15, 31, 50, 0.8);
      border-radius: 15px;
      backdrop-filter: blur(10px);
      border: 1px solid rgba(0, 212, 255, 0.2);
      box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
    }

    input {
      width: 100%;
      padding: 1rem;
      margin-bottom: 1rem;
      background: rgba(255, 255, 255, 0.05);
      border: 1px solid rgba(0, 212, 255, 0.3);
      border-radius: 8px;
      color: #f0f0f0;
      transition: all 0.3s ease;
    }

    input:focus {
      outline: none;
      border-color: #00d4ff;
      box-shadow: 0 0 0 2px rgba(0, 212, 255, 0.3);
    }

    input::placeholder {
      color: #94a3b8;
    }

    button {
      width: 100%;
      padding: 1rem;
      background: linear-gradient(90deg, #00d4ff, #0078ff); /* Gradient button */
      color: white;
      border: none;
      border-radius: 8px;
      font-weight: 600;
      cursor: pointer;
      transition: all 0.3s ease;
    }

    button:hover {
      background: linear-gradient(90deg, #0078ff, #0059d4);
      transform: translateY(-2px);
      box-shadow: 0 4px 12px rgba(0, 212, 255, 0.4);
    }

    ul {
      list-style: none;
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
      gap: 2rem;
      padding: 0 1rem;
    }

    li {
      background: rgba(15, 31, 50, 0.8);
      border-radius: 15px;
      padding: 2rem;
      backdrop-filter: blur(10px);
      border: 1px solid rgba(0, 212, 255, 0.2);
      box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
      transition: all 0.3s ease;
    }

    li:hover {
      transform: translateY(-5px);
      box-shadow: 0 12px 40px rgba(0, 0, 0, 0.4);
    }

    li img {
      width: 100px;
      height: 100px;
      border-radius: 50%;
      object-fit: cover;
      margin: 0 auto 1rem;
      display: block;
      border: 3px solid #00d4ff;
      box-shadow: 0 0 15px rgba(0, 212, 255, 0.4);
    }

    li strong {
      display: block;
      font-size: 1.25rem;
      color: #00d4ff;
      margin-bottom: 0.5rem;
    }

    li p {
      color: #94a3b8;
      margin-bottom: 1.5rem;
      line-height: 1.6;
    }

    .view-button {
      display: inline-block;
      padding: 0.75rem 1.5rem;
      background: #0078ff;
      color: white;
      text-decoration: none;
      border-radius: 8px;
      font-weight: 600;
      transition: all 0.3s ease;
    }

    .view-button:hover {
      background: #0059d4;
      transform: translateY(-2px);
      box-shadow: 0 4px 12px rgba(0, 120, 255, 0.4);
    }

    @media (max-width: 768px) {
      .content {
        padding: 1rem;
      }

      ul {
        grid-template-columns: 1fr;
      }

      li {
        padding: 1.5rem;
      }
    }
  </style>
</head>
<body>
  <div id="particles-js"></div>
  <div class="content">
    <h1>Categories</h1>
    <form id="createCategoryForm">
      <input type="text" name="name" placeholder="Category Name" required>
      <input type="text" name="image" placeholder="Image URL" required>
      <input type="text" name="description" placeholder="Description" required>
      <button type="submit">Create Category</button>
    </form>
    <ul id="categoryList">
      <% categories.forEach(category => { %>
        <li>
          <strong><%= category.name %></strong>
          <img src="<%= category.image %>" alt="<%= category.name %>">
          <p><%= category.description %></p>
          <a href="/categories/<%= category._id %>/subcategories" class="view-button">View Subcategories</a>
        </li>
      <% }) %>
    </ul>
  </div>

  <script>
    // Particles.js configuration
    particlesJS('particles-js', {
      particles: {
        number: {
          value: 100,
          density: {
            enable: true,
            value_area: 1000
          }
        },
        color: {
          value: '#00d4ff'
        },
        shape: {
          type: 'circle'
        },
        opacity: {
          value: 0.5,
          random: false
        },
        size: {
          value: 3,
          random: true
        },
        line_linked: {
          enable: true,
          distance: 150,
          color: '#00d4ff',
          opacity: 0.2,
          width: 1
        },
        move: {
          enable: true,
          speed: 2,
          out_mode: 'out'
        }
      },
      interactivity: {
        detect_on: 'canvas',
        events: {
          onhover: {
            enable: true,
            mode: 'grab'
          },
          onclick: {
            enable: true,
            mode: 'push'
          }
        },
        modes: {
          grab: {
            distance: 140,
            line_linked: {
              opacity: 0.5
            }
          },
          push: {
            particles_nb: 4
          }
        }
      },
      retina_detect: true
    });

    // Form submission handler
    document.getElementById('createCategoryForm').addEventListener('submit', async (e) => {
      e.preventDefault();
      const formData = new FormData(e.target);
      const data = Object.fromEntries(formData.entries());

      try {
        const response = await fetch('/categories', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify(data)
        });

        if (response.ok) {
          alert('Category created successfully!');
          window.location.reload();
        } else {
          throw new Error('Failed to create category');
        }
      } catch (error) {
        alert('Error: ' + error.message);
      }
    });
  </script>
</body>
</html>
