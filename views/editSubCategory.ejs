<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Edit Subcategory</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background-color: #f4f4f4;
      margin: 0;
      padding: 20px;
    }
    h1 {
      text-align: center;
      color: #333;
    }
    form {
      max-width: 600px;
      margin: 0 auto;
      background: #fff;
      padding: 20px;
      border-radius: 8px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }
    input, button, select {
      width: 100%;
      padding: 10px;
      margin: 10px 0;
      border: 1px solid #ccc;
      border-radius: 4px;
    }
    button {
      background-color: #0078ff;
      color: white;
      border: none;
      cursor: pointer;
    }
    button:hover {
      background-color: #0056b3;
    }
    .back-link {
      display: block;
      margin: 20px auto;
      text-align: center;
      text-decoration: none;
      color: #0078ff;
    }
    .back-link:hover {
      text-decoration: underline;
    }
    #taxFields {
      display: <%= subCategory.taxApplicability ? 'block' : 'none' %>;
    }
  </style>
</head>
<body>
  <h1>Edit Subcategory</h1>
  <a href="/categories/<%= subCategory.category %>/subcategories" class="back-link">Back to Subcategories</a>
  <form id="editSubCategoryForm">
    <input type="text" name="name" placeholder="Subcategory Name" value="<%= subCategory.name %>" required>
    <input type="text" name="image" placeholder="Image URL" value="<%= subCategory.image %>" required>
    <input type="text" name="description" placeholder="Description" value="<%= subCategory.description %>" required>
    
    <!-- Tax Applicability Dropdown -->
    <label for="taxApplicability">Tax Applicability:</label>
    <select name="taxApplicability" id="taxApplicability">
      <option value="true" <%= subCategory.taxApplicability ? 'selected' : '' %>>Yes</option>
      <option value="false" <%= !subCategory.taxApplicability ? 'selected' : '' %>>No</option>
    </select>
    
    <!-- Tax Fields -->
    <div id="taxFields">
      <input type="number" name="tax" placeholder="Tax (in percentage or fixed amount)" value="<%= subCategory.tax || 0 %>">
      <label for="taxType">Tax Type:</label>
      <select name="taxType" id="taxType">
        <option value="percentage" <%= subCategory.taxType === 'percentage' ? 'selected' : '' %>>Percentage</option>
        <option value="fixed" <%= subCategory.taxType === 'fixed' ? 'selected' : '' %>>Fixed</option>
      </select>
    </div>
    
    <button type="submit">Update Subcategory</button>
  </form>

  <script>
    // Toggle Tax Fields based on Tax Applicability selection
    document.getElementById('taxApplicability').addEventListener('change', (e) => {
      const taxFields = document.getElementById('taxFields');
      taxFields.style.display = e.target.value === 'true' ? 'block' : 'none';
    });

    // Handle Form Submission
    document.getElementById('editSubCategoryForm').addEventListener('submit', async (e) => {
      e.preventDefault();
      const formData = new FormData(e.target);
      const data = Object.fromEntries(formData.entries());

      try {
        const response = await fetch('/subcategories/<%= subCategory._id %>', {
          method: 'PUT',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify(data)
        });

        if (response.ok) {
          alert('Subcategory updated successfully!');
          window.location.href = '/categories/<%= subCategory.category %>/subcategories';
        } else {
          throw new Error('Failed to update subcategory');
        }
      } catch (error) {
        alert('Error: ' + error.message);
      }
    });
  </script>
</body>
</html>
