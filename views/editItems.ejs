<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Edit Item</title>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: 'Inter', sans-serif;
      color: #f0f0f0;
      background: #0f2027;
      min-height: 100vh;
      display: flex;
      justify-content: center;
      align-items: center;
      padding: 1rem;
    }

    .content {
      width: 100%;
      max-width: 600px;
      background: rgba(15, 31, 50, 0.8);
      padding: 2rem;
      border-radius: 15px;
      border: 1px solid rgba(0, 212, 255, 0.2);
      box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
    }

    h1 {
      color: #00d4ff;
      text-align: center;
      margin-bottom: 1.5rem;
      font-size: 2rem;
    }

    form {
      display: flex;
      flex-direction: column;
      gap: 1rem;
    }

    input, button, select {
      width: 100%;
      padding: 0.75rem;
      border: 1px solid #ccc;
      border-radius: 8px;
      font-size: 1rem;
    }

    input {
      background: rgba(255, 255, 255, 0.05);
      color: #f0f0f0;
    }

    input:focus {
      outline: none;
      border-color: #00d4ff;
      box-shadow: 0 0 5px rgba(0, 212, 255, 0.5);
    }

    button {
      background: linear-gradient(90deg, #00d4ff, #0078ff);
      color: white;
      border: none;
      cursor: pointer;
      transition: background 0.3s ease;
    }

    button:hover {
      background: linear-gradient(90deg, #0078ff, #0059d4);
    }

    .back-link {
      display: block;
      text-align: center;
      margin-top: 1rem;
      color: #00d4ff;
      text-decoration: none;
    }

    .back-link:hover {
      text-decoration: underline;
    }

    .image-preview {
      text-align: center;
      margin-bottom: 1rem;
    }

    .image-preview img {
      width: 150px;
      height: 150px;
      object-fit: cover;
      border-radius: 8px;
      border: 1px solid rgba(0, 212, 255, 0.2);
    }

    #taxFields {
      display: none;
    }

    @media (max-width: 600px) {
      h1 {
        font-size: 1.75rem;
      }

      .content {
        padding: 1rem;
      }

      input, button, select {
        padding: 0.5rem;
      }
    }
  </style>
</head>
<body>
  <div class="content">
    <h1>Edit Item</h1>
    <a href="/categories/<%= categoryId %>/subcategories/<%= subCategoryId %>/items" class="back-link">Back to Items</a>
    <form id="editItemForm">
      <!-- Image Preview -->
      <div class="image-preview">
        <img src="<%= item.image || 'https://via.placeholder.com/150' %>" alt="Item Image">
      </div>

      <input type="text" name="name" placeholder="Item Name" value="<%= item.name %>" required>
      <input type="text" name="image" placeholder="Image URL" value="<%= item.image %>" required>
      <input type="text" name="description" placeholder="Description" value="<%= item.description %>" required>
      <input type="number" name="baseAmount" placeholder="Base Amount" value="<%= item.baseAmount %>" required>
      <input type="number" name="discount" placeholder="Discount" value="<%= item.discount %>" required>
      
      <!-- Tax Applicability Toggle -->
      <label for="taxApplicability">Tax Applicability:</label>
      <select name="taxApplicability" id="taxApplicability">
        <option value="true" <%= item.taxApplicability ? 'selected' : '' %>>Yes</option>
        <option value="false" <%= !item.taxApplicability ? 'selected' : '' %>>No</option>
      </select>

      <!-- Tax Fields -->
      <div id="taxFields" style="display: <%= item.taxApplicability ? 'block' : 'none' %>;">
        <input type="number" name="tax" placeholder="Tax Amount" value="<%= item.tax || 0 %>">
        <select name="taxType">
          <option value="percentage" <%= item.taxType === 'percentage' ? 'selected' : '' %>>Percentage</option>
          <option value="fixed" <%= item.taxType === 'fixed' ? 'selected' : '' %>>Fixed</option>
        </select>
      </div>

      <button type="submit">Update Item</button>
    </form>
  </div>

  <script>
    // Toggle Tax Fields based on Tax Applicability selection
    document.getElementById('taxApplicability').addEventListener('change', (e) => {
      const taxFields = document.getElementById('taxFields');
      taxFields.style.display = e.target.value === 'true' ? 'block' : 'none';
    });

    // Handle Form Submission
    document.getElementById('editItemForm').addEventListener('submit', async (e) => {
      e.preventDefault();
  
      const formData = new FormData(e.target);
      const data = Object.fromEntries(formData.entries());
  
      // Convert string values to numbers
      data.baseAmount = parseFloat(data.baseAmount);
      data.discount = parseFloat(data.discount);
      data.totalAmount = data.baseAmount - data.discount;
  
      if (data.taxApplicability === 'true') {
        data.tax = parseFloat(data.tax);
      } else {
        data.tax = 0;
        data.taxType = null;
      }
  
      try {
        const response = await fetch(`/items/<%= item._id %>`, {
          method: 'PUT',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify(data),
        });
  
        if (response.ok) {
          alert('Item updated successfully!');
          // Redirect using the correct `categoryId` and `subCategoryId`
          window.location.href = `/categories/<%= categoryId %>/subcategories/<%= subCategoryId %>/items`;
        } else {
          throw new Error('Failed to update item');
        }
      } catch (error) {
        alert('Error: ' + error.message);
      }
    });
  </script>
</body>
</html>